<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    tools:context="com.edu.udea.compumovil.grupo6.yamba7.StatusActivity"
    tools:ignore="MergeRootFrame" >

    <EditText
        android:id="@+id/editEstado"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_y="140dp"
        android:ems="10"
        android:hint="@string/bienvenida"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/editarEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_x="470dp"
        android:layout_y="99dp"
        android:background="#00FFFF"
        android:text="@string/nombreBoton" />

    <TextView
        android:id="@+id/textCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="11dp"
        android:layout_y="105dp"
        android:text="140"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="877dp"
        android:layout_height="116dp"
        android:layout_x="-128dp"
        android:layout_y="-8dp"
        android:src="@drawable/logoland" />
    
</AbsoluteLayout>

